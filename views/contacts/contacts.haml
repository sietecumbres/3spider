%h3.title Listado de contactos
%form{:action => "/emails/#{@email.id}/contacts", :method => 'post'}
  .contact_list
    - @contacts.each_with_index do |contact, c|
      %div{:class => "#{if (c%2) > 0 then 'odd' else 'even' end}"}
        %input{:type => 'checkbox', :name => "contacts[]", :value => contact.email, :checked => 'checked'}
          = contact.email
    %input{:type => 'submit', :value => 'guardar'}